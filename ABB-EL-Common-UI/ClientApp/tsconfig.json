{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "esnext",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@app/*" : ["app/*"],
      "@appModules/*": ["app/modules/*"],
      "@appComponents/*": ["app/components/*"],
      "@appServices/*": ["app/services/*"],
      "@appModels/*": ["app/models/*"],
      "@appShared/*": ["app/shared/*"]
    },
  }
}
